<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="457dp"
        android:layout_height="165dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="393dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="393dp">

            <TextView
                android:layout_width="437dp"
                android:layout_height="165dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:text="  Assassin's Creed là một sê-ri trò chơi điện tử thể loại hành động phiêu lưu trong một thế giới mở có nội dung mang tính lịch sử-viễn tưởng. Dòng trò chơi gồm năm bản chính, bốn bản phụ và một vài các phim ngắn bổ trợ cho nội dung của game."
                android:textColor="#100F0F"
                android:textSize="20sp"
                tools:targetApi="m"
                tools:ignore="DuplicateIds" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="459dp"
        android:layout_height="342dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TableRow
            android:id="@+id/recently_layout"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/img1" >

        </TableRow>


    </LinearLayout>

    <LinearLayout
        android:layout_width="462dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="344dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Assassin's Creed"
            android:textColor="#100F0F"
            android:textSize="20sp"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/price"
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:layout_marginStart="150dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Price: 250$"
            android:textColor="#100F0F"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="594dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="431dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="  Phát hành mới nhất: Assassin's Creed Valhalla  "
            android:textColor="#100F0F"
            android:textSize="20sp"
            tools:targetApi="m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="558dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="428dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="  Nền tảng: Android; iOS; macOS; Microsoft  "
            android:textColor="#100F0F"
            android:textSize="20sp"
            tools:targetApi="m" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="459dp"
        android:layout_height="137dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="632dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua"
            tools:layout_editor_absoluteX="334dp"
            tools:layout_editor_absoluteY="73dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>